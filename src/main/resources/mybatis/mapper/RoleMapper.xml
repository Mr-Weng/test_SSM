<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ssm.dao.RoleDao">

    <resultMap id="RoleMap" type="com.ssm.model.Role">
        <id column="RID" property="rid" jdbcType="VARCHAR"/>
        <result column="RNAME" property="rname" jdbcType="VARCHAR"/>
        <result column="RNAME_INFO" property="rname_info" jdbcType="VARCHAR"/>
    </resultMap>

    <!--根据角色id查找角色-->
    <select id="selectRoleByRid" parameterType="java.lang.String" resultMap="RoleMap">
        select * from ROLE
        where RID = #{rid}
    </select>

    <!--根据角色名称查找角色-->
    <select id="selectRoleByName" parameterType="java.lang.String" resultMap="RoleMap">
        select * from ROLE
        where RNAME = #{rname}
    </select>

    <!--获取所有角色信息-->
    <select id="selectAllRole" resultMap="RoleMap">
        select * from ROLE
    </select>

    <!--新增角色-->
    <insert id="insertRole" parameterType="com.ssm.model.Role">
        insert into ROLE (
        RID, RNAME, RNAME_INFO
        ) VALUES (
        #{rid}, #{rname}, #{rname_info}
        )
    </insert>

    <!--根据角色id删除角色信息，需要权限,需要连同 “用户-角色关联表”、“角色-权限关联表” 一并删除-->



</mapper>